{
  "build": {
    "builder": "NIXPACKS"
  },
  "nixpacks": {
    "env": {
      "NODE_VERSION": "20",
      "NPM_VERSION": "10"
    },
    "phases": {
      "setup": {
        "packages": ["nodejs_20", "npm-10_x"]
      },
      "install": {
        "cmds": ["npm install"]
      },
      "build": {
        "cmds": ["npm run build"]
      },
      "start": {
        "cmd": "npm start"
      }
    }
  }
}
